		ВыбранноеЗначение = ПолучитьЗначение("ОтмененИсполнителем") Тогда
		
		ДопПараметры = Новый Структура;
		ДопПараметры.Вставить("Статус", объект.Статус);
		
		ОткрытьФорму("Документ.ТК_ЗаказПокупателяКазначейсвто.Форма.ФормаОтмены",, ЭтаФорма,,,,Новый ОписаниеОповещения("ВыполнитьПослеОкончания", ЭтаФорма,ДопПараметры), РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
		
	КонецЕсли;


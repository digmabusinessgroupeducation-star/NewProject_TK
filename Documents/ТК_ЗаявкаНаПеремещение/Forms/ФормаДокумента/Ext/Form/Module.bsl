	СкладПередИзменением = СкладКомпании;

	ТП = ТорговаяПлощадкаСклада(Объект.СкладКомпании);
	Если ТорговаяПлощадкаПередИзменением <> ТП Тогда
		Объект.ТорговаяПлощадка = ТП;
	КонецЕсли;
	
	Если СкладПередИзменением <> Объект.СкладКомпании Тогда
	   СкладКомпании = Объект.СкладКомпании;
	   ПриИзмененииСкладаСервер()



Функция ПолучитьКоличествоДокументовВПотоке(Последовательность)Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст =	"ВЫБРАТЬ
	 |	ТК_ПараметрыВосстановленияПоследовательности.КоличествоДокументовПотоке КАК ДанныеПараметра
	 |ИЗ
	 |	РегистрСведений.ТК_ПараметрыВосстановленияПоследовательности КАК ТК_ПараметрыВосстановленияПоследовательности
	 |ГДЕ
	 |	ТК_ПараметрыВосстановленияПоследовательности.Последовательность = &Последовательность";
	Запрос.УстановитьПараметр("Последовательность",Последовательность);
	
	Рез = Запрос.Выполнить();
	Если Рез.Пустой() Тогда
		Возврат 50;
	КонецЕсли;
	
	Выборка = Рез.Выбрать();
	Выборка.Следующий();
	
	Возврат Выборка.ДанныеПараметра;
	
	
	
КонецФункции


Функция ПолучитьКоличествоОдновременныхПотоков(Последовательность,БизнесВремя)Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст =	"ВЫБРАТЬ
	|	ВЫБОР
	|		КОГДА &БизнесВремя
	|			ТОГДА ТК_ПараметрыВосстановленияПоследовательности.КоличествоОдновременныхПотоковБизнес
	|		ИНАЧЕ ТК_ПараметрыВосстановленияПоследовательности.КоличествоОдновременныхПотоков
	|	КОНЕЦ КАК ДанныеПараметра
	|ИЗ
	|	РегистрСведений.ТК_ПараметрыВосстановленияПоследовательности КАК ТК_ПараметрыВосстановленияПоследовательности
	|ГДЕ
	|	ТК_ПараметрыВосстановленияПоследовательности.Последовательность = &Последовательность";
	Запрос.УстановитьПараметр("Последовательность",Последовательность);
	Запрос.УстановитьПараметр("БизнесВремя",БизнесВремя);
	
	
	Рез = Запрос.Выполнить();
	Если Рез.Пустой() Тогда
		Если БизнесВремя Тогда
			Возврат  5;
		Иначе
			Возврат  15;
		КонецЕсли;
	КонецЕсли;
	
	Выборка = Рез.Выбрать();
	Выборка.Следующий();
	
	Возврат Выборка.ДанныеПараметра;
	
	
	
КонецФункции

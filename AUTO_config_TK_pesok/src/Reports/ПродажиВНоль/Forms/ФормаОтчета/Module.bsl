	Отчет.Склады.Добавить(Справочники.СкладыКомпании.НайтиПоКоду("GL000104"));	//	Основа Инфо ООО
	Отчет.Склады.Добавить(Справочники.СкладыКомпании.НайтиПоКоду("GL000440"));	//	Табачная компания Слобожанщины ООО
	
	//Отчет.Товар.Добавить(Справочники.Номенклатура.НайтиПоКоду("D0009000"));		//	Табачные изделия
	//Отчет.Товар.Добавить(Справочники.Номенклатура.НайтиПоКоду("D0074400"));		//	Снеки
	Отчет.Товар.Добавить(Справочники.Номенклатура.НайтиПоКоду("D0009900"));		//	Тара и упаковка
	
КонецПроцедуры


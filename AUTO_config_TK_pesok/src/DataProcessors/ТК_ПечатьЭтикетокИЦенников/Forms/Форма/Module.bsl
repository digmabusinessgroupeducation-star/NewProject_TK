	СписокВыбораШаблонов = Элементы.ШаблонДляПечати.СписокВыбора;
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенника", НСтр("ru = 'Ценник 60х38 + QR'; uk = 'Цінник 60х38 + QR'"));

	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенникаАкция96*76А", НСтр("ru = 'Ценник Акция 96*76 + QR Баффет'; uk = 'Цінник Акція 96*76 + QR Баффет'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенникаАкция96*76КБПМ", НСтр("ru = 'Ценник Покупай больше 96*76 + QR Баффет'; uk = 'Цінник Купуй більше 96*76 + QR Баффет'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенникаАкция96*76ШЦ", НСтр("ru = 'Ценник Шок цена 96*76 + QR Баффет'; uk = 'Цінник Шок ціна 96*76 + QR Баффет'"));

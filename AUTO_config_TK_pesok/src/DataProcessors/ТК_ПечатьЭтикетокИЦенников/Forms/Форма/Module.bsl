	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенника35х30", НСтр("ru = 'Ценник 35х30'; uk = 'Цінник 35х30'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенника40х30", НСтр("ru = 'Ценник 40х30'; uk = 'Цінник 40х30'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенника25х46", НСтр("ru = 'Ценник 25х46'; uk = 'Цінник 25х46'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенникаБаффет60х38", НСтр("ru = 'Ценник 60х38 + QR Баффет'; uk = 'Цінник 60х38 + QR Баффет'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенникаАкция96*76ТТ", НСтр("ru = 'Ценник Товар недели 96*76 + QR Баффет'; uk = 'Цінник Товар тижня 96*76 + QR Баффет'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенникаАкция96*76Р", НСтр("ru = 'Ценник Распродажа 96*76 + QR Баффет'; uk = 'Цінник Розпродаж 96*76 + QR Баффет'"));
	СписокВыбораШаблонов.Добавить("ПФ_MXL_МакетЦенникаАкция96*76РМ", НСтр("ru = 'Ценник Распродажа МРЦ 96*76 + QR Баффет'; uk = 'Цінник Розпродаж МРЦ 96*76 + QR Баффет'"));

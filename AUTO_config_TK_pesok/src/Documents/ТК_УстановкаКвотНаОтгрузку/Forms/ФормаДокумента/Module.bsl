&НаКлиенте
Процедура ЗагрузитьТоварыИзФайла(Команда)
	
	ДополнительныеПараметры = Новый Структура;
	
	ПараметрыЗагрузки = ЗагрузкаДанныхИзФайлаКлиент.ПараметрыЗагрузкиДанных();
	ПараметрыЗагрузки.ПолноеИмяТабличнойЧасти = "ТК_УстановкаКвотНаОтгрузку.Товары";
	ПараметрыЗагрузки.Заголовок = НСтр("ru = 'Загрузка списка квот из файла'; uk = 'Завантаження списка квот із файлу'");		
	ПараметрыЗагрузки.ДополнительныеПараметры = ДополнительныеПараметры;
	
	Оповещение = Новый ОписаниеОповещения("ЗагрузитьТоварыИзФайлаЗавершение", ЭтотОбъект, ДополнительныеПараметры);
	ЗагрузкаДанныхИзФайлаКлиент.ПоказатьФормуЗагрузки(ПараметрыЗагрузки, Оповещение);	
		
КонецПроцедуры

&НаКлиенте
Процедура ЗагрузитьТоварыИзФайлаБАТ(Команда)
	
	ДополнительныеПараметры = Новый Структура;
	ДополнительныеПараметры.Вставить("ЗагрузкаБАТ", Истина);
	ДополнительныеПараметры.Вставить("АдресДопДанных", ПоместитьВоВременноеХранилище(Неопределено, ЭтаФорма.УникальныйИдентификатор));
	
	ПараметрыЗагрузки = ЗагрузкаДанныхИзФайлаКлиент.ПараметрыЗагрузкиДанных();
	ПараметрыЗагрузки.ПолноеИмяТабличнойЧасти = "ТК_УстановкаКвотНаОтгрузку.Товары";
	ПараметрыЗагрузки.Заголовок = НСтр("ru = 'Загрузка списка квот из файла (БАТ)'; uk = 'Завантаження списка квот із файлу (БАТ)'");		
	ПараметрыЗагрузки.ИмяМакетаСШаблоном = "ЗагрузкаИзФайлаТоварыБАТ";
	ПараметрыЗагрузки.ДополнительныеПараметры = ДополнительныеПараметры;
	   
	Оповещение = Новый ОписаниеОповещения("ЗагрузитьТоварыИзФайлаЗавершение", ЭтотОбъект, ДополнительныеПараметры);
	ЗагрузкаДанныхИзФайлаКлиент.ПоказатьФормуЗагрузки(ПараметрыЗагрузки, Оповещение);	

КонецПроцедуры

&НаКлиенте
Процедура ЗагрузитьТоварыИзФайлаЗавершение(АдресЗагруженныхДанных, ДополнительныеПараметры) Экспорт
    
    Если АдресЗагруженныхДанных = Неопределено Тогда 
        Возврат;
    КонецЕсли;
	
    ЗагрузитьТоварыИзФайлаНаСервере(АдресЗагруженныхДанных, ДополнительныеПараметры);
	
КонецПроцедуры

&НаСервере
Процедура ЗагрузитьТоварыИзФайлаНаСервере(АдресЗагруженныхДанных, ДополнительныеПараметры)
	
	Товары = ПолучитьИзВременногоХранилища(АдресЗагруженныхДанных);
	
	ЗагрузкаБАТ = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ДополнительныеПараметры, "ЗагрузкаБАТ", Ложь);	
	АдресДопДанных = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ДополнительныеПараметры, "АдресДопДанных", "");
	
	СписокКвот = Неопределено;	
	Если Не ПустаяСтрока(АдресДопДанных) Тогда 							
		Попытка
			ДопДанные = ПолучитьИзВременногоХранилища(АдресДопДанных);
			СписокКвот = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ДопДанные, "СписокКвот", Неопределено);
		Исключение КонецПопытки;		
		
		Попытка
			УдалитьИзВременногоХранилища(АдресДопДанных);
		Исключение КонецПопытки;
	КонецЕсли;
	
	Если ЗагрузкаБАТ И (ТипЗнч(СписокКвот) <> Тип("Соответствие") ИЛИ СписокКвот.Количество() = 0) Тогда 
		Возврат;
	КонецЕсли;	
	
	ТоварДобавлен = Ложь;
	
	Если ЗагрузкаБАТ Тогда 
		
		ТипМассив = Тип("Массив");
		
		Для Каждого СтрокаТовары Из Товары Цикл 
			Если Не ЗначениеЗаполнено(СтрокаТовары.Номенклатура) Тогда 
				Продолжить;
			КонецЕсли;
			
			МассивКвот = СписокКвот.Получить(СтрокаТовары.Идентификатор);
			Если ТипЗнч(МассивКвот) <> ТипМассив ИЛИ МассивКвот.Количество() = 0 Тогда 
				Продолжить;
			КонецЕсли;
			
			Для Ит = 0 По МассивКвот.ВГраница() Цикл 
				текСтрока = МассивКвот.Получить(Ит);
				НоваяСтрока = Объект.Товары.Добавить();
				
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаТовары, "Номенклатура, Область");
				ЗаполнитьЗначенияСвойств(НоваяСтрока, текСтрока, "ВидКвоты, Порог, Процент");
				
				ТоварДобавлен = Истина;
			КонецЦикла;
		КонецЦикла;
		
	Иначе
		
		Для Каждого СтрокаТЧ Из Товары Цикл 
			Если ЗначениеЗаполнено(СтрокаТЧ.Номенклатура) Тогда 
				НоваяСтрока = Объект.Товары.Добавить();
				ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаТЧ);
				
				ТоварДобавлен = Истина;
			КонецЕсли;			
		КонецЦикла;
		
	КонецЕсли;
	
	Если ТоварДобавлен Тогда 
		Модифицированность = Истина;
	КонецЕсли;
	
КонецПроцедуры


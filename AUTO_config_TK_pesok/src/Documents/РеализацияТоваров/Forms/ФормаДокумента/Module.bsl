	МассивВсехРеквизитов.Добавить("Товары.Содержание");
	МассивВсехРеквизитов.Добавить("ГруппаУстановкиМаркетинга");
	МассивВсехРеквизитов.Добавить("СтраницаТара");
	МассивВсехРеквизитов.Добавить("Распределенные");
	МассивВсехРеквизитов.Добавить("ГруппаСписание");

	МассивРеквизитовОперации = Новый Массив;
	
	Если Объект.ХозОперация = ПредопределенноеЗначение("Справочник.ХозОперации.АктОбОказанииУслуг") Тогда 
		МассивРеквизитовОперации.Добавить("СтраницаРаспределениеМаркетинга");
		МассивРеквизитовОперации.Добавить("УстановкаМаркетинга");
		МассивРеквизитовОперации.Добавить("РасчетБонусов");
		МассивРеквизитовОперации.Добавить("ГруппаУстановкиМаркетинга");
		МассивРеквизитовОперации.Добавить("Товары.ТипБонуса");
		МассивРеквизитовОперации.Добавить("Товары.Содержание");
	Иначе
		МассивРеквизитовОперации.Добавить("СтраницаТара");
		МассивРеквизитовОперации.Добавить("Распределенные");
		МассивРеквизитовОперации.Добавить("ГруппаСписание");
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Объект.ДокументОснование) Тогда 
		МассивРеквизитовОперации.Добавить("ГруппаОснование");
	КонецЕсли;
	
	Если Объект.ПроведенПоКарте Тогда 
		МассивРеквизитовОперации.Добавить("Карта");
	КонецЕсли;
	
	Если Объект.РегламентированныйУчет Тогда 
		МассивРеквизитовОперации.Добавить("СуммаНДС");
		МассивРеквизитовОперации.Добавить("ТоварыЦенаБезНалогов");
		МассивРеквизитовОперации.Добавить("ТоварыСуммаБезНалогов");
		МассивРеквизитовОперации.Добавить("ТоварыСуммаНДС");
	КонецЕсли;
	
	ОбщегоНазначенияТККлиентСервер.УстановитьВидимостьЭлементовПоМассиву(Элементы, МассивВсехРеквизитов, МассивРеквизитовОперации);
	
КонецПроцедуры



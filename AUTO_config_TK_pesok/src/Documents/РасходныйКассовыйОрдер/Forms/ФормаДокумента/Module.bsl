&НаСервере
Процедура ЗаполнитьПоказателиОстатков(ЗаполнитьОстатокВКассе = Ложь, ЗаполнитьДолгПоДоговору = Ложь) Экспорт 
	
	СтруктураПараметров = Новый Структура;
	СтруктураПараметров.Вставить("Дата", Новый МоментВремени(Объект.Дата, Объект.Ссылка));
	
	УстановитьВидимостьПоказателейОстаткаИДолга(ЗаполнитьОстатокВКассе, ЗаполнитьДолгПоДоговору);
	
	ВалютаДокумента = Объект.ВалютаДокумента;
	Если ЗаполнитьОстатокВКассе И Элементы.НадписьОстаток.Видимость Тогда 			
		СтруктураПараметров.Вставить("КассаКомпании", Объект.КассаКомпании);
		СтруктураПараметров.Вставить("ВалютаДокумента", ВалютаДокумента);						
		
		чОстатокВКассе = ПолучитьОстатокВКассе(СтруктураПараметров);
		
		ОстатокВКассе = НСтр("ru = 'Остаток в кассе: '; uk = 'Залишок в касі: '") + Формат(чОстатокВКассе, "ЧДЦ=2; ЧН=") + " " + ВалютаДокумента;
		Элементы.НадписьОстаток.Заголовок = ОстатокВКассе;
	КонецЕсли;
	
	Если ЗаполнитьДолгПоДоговору И Элементы.НадписьДолгПоДоговору.Видимость Тогда 		
		СтруктураПараметров.Вставить("РегламентированныйУчет", Объект.РегламентированныйУчет);
		СтруктураПараметров.Вставить("ДоговорВзаиморасчетов", Объект.ДоговорВзаиморасчетов);
		
		чДолгПоДоговору = ПолучитьДолгПоДоговору(СтруктураПараметров);		
		
		ДолгПоДоговору = НСтр("ru = 'По договору долг контрагента составляет: '; uk = 'По договору долг контрагента составляет: '") + Формат(чДолгПоДоговору, "ЧДЦ=2; ЧН=") + " " + ВалютаДокумента;
		Элементы.НадписьДолгПоДоговору.Заголовок = ДолгПоДоговору;
	КонецЕсли;	
	
КонецПроцедуры

&НаСервереБезКонтекста
Функция ПолучитьОстатокВКассе(СтруктураПараметров)
	
	Если ПравоДоступа("Чтение",Метаданные.РегистрыНакопления.ДенежныеСредстваКомпании)Тогда	
		
		ТекДата = ?(Не ЗначениеЗаполнено(СтруктураПараметров.Дата), ТекущаяДата(), СтруктураПараметров.Дата);
		Граница = Новый Граница(ТекДата, ВидГраницы.Включая);
		
		Запрос = Новый Запрос("ВЫБРАТЬ
		|	ДенежныеСредстваКомпанииОстатки.СуммаОстаток КАК Сумма
		|ИЗ
		|	РегистрНакопления.ДенежныеСредстваКомпании.Остатки(
		|			&Дата,
		|			СтруктурнаяЕдиница ССЫЛКА Справочник.КассыКомпании
		|				И СтруктурнаяЕдиница = &КассаКомпании
		|				И Валюта = &ВалютаДокумента) КАК ДенежныеСредстваКомпанииОстатки");
		
		
		Запрос.УстановитьПараметр("Дата", Граница);
		Запрос.УстановитьПараметр("КассаКомпании", СтруктураПараметров.КассаКомпании);
		Запрос.УстановитьПараметр("ВалютаДокумента", СтруктураПараметров.ВалютаДокумента);
		
		Выборка = Запрос.Выполнить().Выбрать();
		
		Если Выборка.Следующий() Тогда 
			Возврат Выборка.Сумма;
		Иначе 
			Возврат 0;
		КонецЕсли;
	Иначе
		Возврат 0;
	КонецЕсли;
КонецФункции

&НаСервереБезКонтекста
Функция ПолучитьДолгПоДоговору(СтруктураПараметров)
	
	Если ПравоДоступа("Чтение",Метаданные.РегистрыНакопления.РасчетыСПоставщиками) Тогда	
		
		ТекДата = ?(Не ЗначениеЗаполнено(СтруктураПараметров.Дата), ТекущаяДата(), СтруктураПараметров.Дата);
		Граница = Новый Граница(ТекДата, ВидГраницы.Включая);
		
		Запрос = Новый Запрос("ВЫБРАТЬ
		|	ЕСТЬNULL(РасчетыСПокупателямиОстатки.СуммаОстаток, 0) + ЕСТЬNULL(РасчетыСПоставщикамиОстатки.СуммаОстаток, 0) КАК Долг
		|ИЗ
		|	РегистрНакопления.РасчетыСПоставщиками.Остатки(
		|			&Дата,
		|			ДоговорВзаиморасчетов = &ДоговорВзаиморасчетов
		|				И РегламентированныйУчет = &РегламентированныйУчет) КАК РасчетыСПоставщикамиОстатки,
		|	РегистрНакопления.РасчетыСПокупателями.Остатки(
		|			&Дата,
		|			ДоговорВзаиморасчетов = &ДоговорВзаиморасчетов
		|				И РегламентированныйУчет = &РегламентированныйУчет) КАК РасчетыСПокупателямиОстатки");
		
		Запрос.УстановитьПараметр("Дата", Граница);
		Запрос.УстановитьПараметр("РегламентированныйУчет", СтруктураПараметров.РегламентированныйУчет);
		Запрос.УстановитьПараметр("ДоговорВзаиморасчетов", СтруктураПараметров.ДоговорВзаиморасчетов);
		
		Выборка = Запрос.Выполнить().Выбрать();
		
		Если Выборка.Следующий() Тогда 
			Возврат Выборка.Долг;
		Иначе 
			Возврат 0;
		КонецЕсли;
	Иначе
		Возврат 0;
	КонецЕсли;
		
КонецФункции


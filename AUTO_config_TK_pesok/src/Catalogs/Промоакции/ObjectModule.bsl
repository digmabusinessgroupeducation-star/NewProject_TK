


процедура сформироватьНаименование () Экспорт
	//Объект.Наименование = "Промо №"+Объект.Код+", с "+Формат(Объект.ДатаНачала,"ДФ=dd.MM.yyyy")+" по "+Формат(Объект.ДатаОкончания,"ДФ=dd.MM.yyyy");
	Если ЗначениеЗаполнено(Код) тогда
		Наименование = "Промо №"+Строка(Число(Код))+", с "+Формат(ДатаНачала,"ДФ=dd.MM.yyyy")+" по "+Формат(ДатаОкончания,"ДФ=dd.MM.yyyy");
	иначе
		Наименование = "Промо, с "+Формат(ДатаНачала,"ДФ=dd.MM.yyyy")+" по "+Формат(ДатаОкончания,"ДФ=dd.MM.yyyy");
	КонецЕсли;	
КонецПроцедуры


